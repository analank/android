<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--<item name="android:textViewStyle">@style/ExpenseTrackerTextView</item>-->
        <!--<item name="android:editTextStyle">@style/ExpenseTrackerEditText</item>-->
        <item name="android:buttonStyle">@style/FixelloButton</item>
        <!--<item name="android:spinnerStyle">@style/ExpenseTrackerSpinner</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="KalyanTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProfileHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="WelcomeDescription" parent="KalyanTextView">
        <item name="android:padding">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="FixelloButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
